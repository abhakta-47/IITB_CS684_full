{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Parse and Build",
            "type": "shell",
            "command": "build_run",
            "args": [
                "-s",
                "${input:nodeName}",
                "-p",
                "${relativeFile}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Parse and Build (cmd)",
            "type": "shell",
            "command": "build_run",
            "args": [
                "-c",
                "260",
                "-f",
                "${fileDirname}/input",
                "-s",
                "${input:nodeName}",
                "-p",
                "${relativeFile}",
                "|",
                "paste",
                "-d",
                "' '",
                "-", // 1
                "-", // 2
                "-", // 3
                "-", // 1
                "-", // 2
                "-", // 3
                "|",
                "nl",
                "-w2",
                "-s'. '"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "nodeName",
            "type": "promptString",
            "description": "Node name to build for"
        }
    ]
}