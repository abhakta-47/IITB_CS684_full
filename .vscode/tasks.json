{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Parse and Build",
            "type": "shell",
            "command": "build_run",
            "args": [
                "-s",
                "${input:nodeName}",
                "-p",
                "${relativeFile}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Parse and Build (cmd)",
            "type": "shell",
            "command": "build_run",
            "args": [
                "-c",
                "260",
                "-f",
                "${fileDirname}/input",
                "-s",
                "${input:nodeName}",
                "-p",
                "${relativeFile}",
                "|",
                "paste",
                "-d",
                "' '",
                "-",
                "-",
                "-",
                "-",
                "-",
                "-",
                "|",
                "nl",
                "-w2",
                "-s'. '"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build line_follower",
            "type": "shell",
            "command": [
                "build_run",
                "-s",
                "main",
                "-p",
                "project/heptagon/line_follower.ept",
                "-k",
                "1",
                "&&",
                "${workspaceFolder}/project/integrate.sh",
                "line_follower",
                "${workspaceFolder}/project/src"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "upload monitor",
            "command": "${command:platformio-ide.uploadAndMonitor}",
        },
        {
            "label": "build and push",
            "type": "shell",
            "command": "",
            "dependsOn": [
                "Build line_follower",
                "upload monitor"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOrder": "sequence"
        }
    ],
    "inputs": [
        {
            "id": "nodeName",
            "type": "promptString",
            "description": "Node name to build for"
        }
    ]
}